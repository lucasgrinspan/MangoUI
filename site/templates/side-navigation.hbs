<nav data-orientation="vertical">
  <ul>
    {{#each sitemap}}
      <li><a href="/docs/{{this.slug}}" {{ariaCurrent this.slug ../current}}>{{this.title}}</a></li>
      <ul>
        {{#each this.pages}}
          <li><a href="/docs/{{../slug}}/{{this.slug}}" {{ariaCurrent this.slug ../../current}}>{{this.title}}</a></li>
        {{/each}}
      </ul>
    {{/each}}
  </ul>
</nav>